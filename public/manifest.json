{
  "manifest_version": 3,
  "name": "EZ Bookmark Manger",
  "version": "0.0.1",

  "action": {
    "default_title": "북마크 앱",
    "default_popup": "popup.html",
    "default_icon": {
      "128": "img/logo-128.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["_favicon/*"],
      "matches": ["<all_urls>"],
      "extension_ids": ["*"]
    }
  ],
  "description": "북마크를 편리하게 탐색하고 삭제해보세요",
  "permissions": ["bookmarks", "favicon"]
}
